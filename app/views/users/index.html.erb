<div class="container">
  <div class="row">
    <div class="col-md-3">
      
    <%= render 'books/user_info', user: @user, book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table table-striped">
        <tr>
          <th>image</th>
          <th colspan="2">name</th>
        </tr>
  
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(100,100) %>
          </td>
          <td>
          <%= user.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(user.id) %>
           </td>
        </tr>
        <% end %>
       </table>
      </div>
   </div>
</div>