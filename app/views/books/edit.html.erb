<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title" %><br>
  <label for="inputBody">Opinion</label><br>
  <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion" %><br>
  <%= f.submit "Update Book" %><br>
<% end %>

<%= link_to "Show", book_path(params[:id]) %> | <%= link_to "Back", books_path %>