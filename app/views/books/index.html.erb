<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'user_info', user: @user, book: @book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-striped">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            
            <%= render 'post_list', books: @books  %>
            
            </table>
      </div>
    </div>
</div>