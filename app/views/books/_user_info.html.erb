<h2>User info</h2>
<p>Name: <%= user.name %></p>
<p>Introduction: <%= user.introduction %></p>
<p><%= image_tag user.get_profile_image(100,100) %></p>
<p>
  <%= link_to  edit_user_path(user.id), class: "btn btn-secondary" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</p>
<h2>New book</h2>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book', class: "btn btn-secondary" %>
  <% end %>