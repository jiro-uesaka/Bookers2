<% books.each do |book| %>
  <tr>
    <!--投稿者画像-->
    <td>
      <%= link_to user_path(book.user_id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
      <% end %>
    </td>
    <!--本のタイトル-->
    <td>
      <%= link_to book.title, book_path(book.id) %>
    </td>
    <!--本の説明-->
    <td>
      <%= book.body %>
    </td>
  </tr>
<% end %>