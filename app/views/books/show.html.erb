<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'user_info', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <tr>
          <td>
            <%= link_to user_path(@post_book.user_id) do %>
              <%= image_tag @post_book.user.get_profile_image(100,100) %><br>
              <%= @post_book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @post_book.title, book_path(params[:id]) %>
          </td>
          <td>
            <%= @post_book.body %>
          </td>
          <% if @post_book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(params[:id]) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(params[:id]), method: :delete, "data-confirm" => "本当に消してよろしいですか？" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>